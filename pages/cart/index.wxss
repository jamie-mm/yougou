page, .da{
    height: 100%;
    background: #f6f6f6;
}
/* 收货人 */
.address{
    padding:20rpx;
    color: #666666;
    display: flex;
    justify-content: space-between;
    padding-right: 80rpx;
    position: relative;
    font-size: 14px;
    background: #ffffff;
}
.address::after{
    display: block;
    content: "";
    position: absolute;
    top: 40rpx;
    right: 25rpx;
    width: 12rpx;
    height: 12rpx;
    border-top: 1px solid #999999;
    border-right: 1px solid #999999;
    transform: rotate(45deg);
}
/* 地址 */
.adderss_info{
padding: 20rpx;
color: #666666;
font-size: 14px;
background: #ffffff;
}
.address-jamie{
    padding: 20rpx;
    
}
.adders_img image{
    height: 15rpx;
    display: block;
}
/* 优购收藏馆  */
.addeess_info{
padding: 20rpx;
  font-size: 14px;
  background: #ffffff;
}
.addeess_info icon{
    margin-right: 20rpx;
}

/* 优购列表 */
.goods-lists{
    display:flex;
    justify-content: space-between;
    background: #ffffff;
}
.goodsicon{
    width: 100rpx;
  justify-content: center;
  align-items: center;
    display: flex;

}
.goods_right{
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 20rpx;
    
}
.goods_right image{
width: 200rpx;
height: 200rpx;
flex-shrink: 0;
margin-right: 20rpx;
}
.goods_top{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.goods_title{
    overflow:hidden; 
text-overflow:ellipsis;
display:-webkit-box; 
-webkit-box-orient:vertical;
-webkit-line-clamp:2;
margin-bottom: 10rpx;
}
.goods_price{
    display: flex;
    justify-content: space-between;
}
.goods_price .price{
    color: red;
}
.number {
display: flex;
padding-right: 50rpx;
color: #999999;
}
.number text{
    border: 1px solid #eeeeee;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
}
.number .brt{
    margin: 0 20rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 14px;
}
/* 底部 */
.footer_goods{
   display: flex;
   position: fixed;
   height: 100rpx;
   width: 100%;
   left: 0;
   bottom: 0;
   background: #ffffff;
}
.quxuan{
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #999999;
}
.heji{
    flex: 2;
    margin-left: 80rpx;
    font-size: 15px;
}
.heji .red{
    color: red;
}
.heji .yunfe{
    font-size: 13px;
    color: #999999;
}
.jiesuan{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #ff2d4a;
    color: #ffffff;
}